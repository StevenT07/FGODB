<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/skill_border"

    >
<TextView
    android:id="@+id/skill_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Placeholder"
    android:textSize="12sp"
    android:textAlignment="center"
    android:textColor="@android:color/transparent"
    android:background="@color/colorHeader"
    style="?android:listSeparatorTextViewStyle"
    android:fontFamily="sans-serif"
    app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/skill_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@+id/skill_header"
        app:layout_constraintTop_toBottomOf="@+id/skill_header"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/skill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder"
        android:textColor="@color/colorHeader"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        android:singleLine="false"
        app:layout_constraintStart_toEndOf="@+id/skill_icon"
        app:layout_constraintTop_toTopOf="@+id/skill_icon" />

    <TextView
        android:id="@+id/skill_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:scrollHorizontally="true"
        android:autoSizeTextType="uniform"
        android:singleLine="false"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/skill_name"
        app:layout_constraintTop_toBottomOf="@+id/skill_name" />



</androidx.constraintlayout.widget.ConstraintLayout>

