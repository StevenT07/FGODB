<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ptn_repeat">
                <!--Will eventually add gradient for background for textview-->
                <TextView
                    android:id="@+id/servant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif"
                    android:text="Servant Name"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/servant_portrait"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/servant_portrait"
                    android:layout_width="175dp"
                    android:layout_height="246dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/mash_portrait"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/servant_name" />

                <Button
                    android:id="@+id/ascension_1_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAscensionButton"

                    android:text="@string/ascension_1_button"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/ascension_3_button"
                    app:layout_constraintEnd_toStartOf="@+id/ascension_2_button"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/servant_portrait"
                    app:layout_constraintTop_toTopOf="@+id/ascension_2_button" />

                <Button
                    android:id="@+id/ascension_2_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/colorUnselectedAscensionButton"
                    android:text="@string/ascension_2_button"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/ascension_3_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorUnselectedAscensionButton"
                    android:text="@string/ascension_3_button"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/ascension_4_button"
                    app:layout_constraintEnd_toStartOf="@+id/ascension_4_button"

                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/servant_portrait" />

                <Button
                    android:id="@+id/ascension_4_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorUnselectedAscensionButton"
                    android:text="@string/ascension_4_button"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/ascension_2_button"
                    app:layout_constraintTop_toBottomOf="@+id/ascension_2_button" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/skill_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/servant_portrait" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>