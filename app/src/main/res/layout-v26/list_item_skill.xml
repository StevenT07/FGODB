<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/skill_border"
    >
<TextView
    android:id="@+id/skill_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Placeholder"
    android:textSize="18sp"
    android:textAlignment="center"
    android:textColor="@android:color/transparent"
    android:background="@color/colorHeader"
    style="?android:listSeparatorTextViewStyle"
    android:fontFamily="sans-serif"
    app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/skill_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/skill_header"
        app:layout_constraintTop_toTopOf="@+id/skill_name" />

    <TextView
        android:id="@+id/skill_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:singleLine="false"
        android:text="Placeholder"
        android:textColor="@color/colorHeader"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skill_icon"
        app:layout_constraintTop_toBottomOf="@+id/skill_header" />

    <TextView
        android:id="@+id/skill_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:autoSizeTextType="uniform"
        android:maxLines="4"
        android:text="Big long skill description that takes up a lot of space"
        app:autoSizeTextType="uniform"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/skill_name"
        app:layout_constraintTop_toBottomOf="@+id/skill_name" />



</androidx.constraintlayout.widget.ConstraintLayout>
    <TableLayout
        android:id="@+id/skill_buff_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/skill_border"/>
</LinearLayout>